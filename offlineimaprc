# -*- mode: conf -*-
# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# suit to get started fast.

[general]
accounts = RedHat
ui = Noninteractive.Basic

########################################################################
# Red Hat Zimbra Mail

[Account RedHat]
localrepository = Local
remoterepository = Remote
autorefresh = 5
postsynchook = email-tagger

[Repository Local]
type = Maildir
localfolders = ~/email
sep = /

[Repository Remote]
type = IMAP
ssl = yes
remoteport = 993
remotepassfile = ~/FILENAMEHERE
remotehost = calendar.corp.redhat.com
remoteuser = tbielawa
subscribedonly = no
maxconnections = 3
