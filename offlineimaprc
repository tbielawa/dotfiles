# -*- mode: conf -*-

# Basic configuration suitable for running offlineimap in the
# background.

# Calls a shell script, 'email-tagger', after running which uses
# 'notmuch' to handle indexing over the new mail.
[general]
accounts = RedHat
ui = Noninteractive.Basic

[Account RedHat]
localrepository = Local
remoterepository = Remote
postsynchook = email-tagger

[Repository Local]
type = Maildir
localfolders = ~/email
sep = /

[Repository Remote]
type = IMAP
ssl = yes
remoteport = 993
remotepassfile = ~/.redhat-email.pass
remotehost = $MAILSERVER$
remoteuser = tbielawa
subscribedonly = no
